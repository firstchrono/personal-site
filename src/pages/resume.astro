---
import MainHead from "../components/MainHead.astro";
import Button from "../components/Button/index.jsx";
import Footer from "../components/Footer/index.jsx";
import Nav from "../components/Nav/index.jsx";
---

<html lang="en">
	<head>
		<MainHead title="Jon's Resume" description="Jon's Resume" />
		<style lang="scss">
			.heroImg {
				max-height: 24rem;
				object-fit: cover;
				overflow: hidden;

				img {
					width: 100%;
				}
			}

			.bio {
				font-size: var(--f-u1);
				line-height: 2;
			}
		</style>
	</head>
	<body>
		<Nav />
		<div class="wrapper">
			<h1>About Me</h1>
			<div class="heroImg">
				<img
					width="1400"
					height="350"
					src="https://images.unsplash.com/photo-1581977012607-4091712d36f9?auto=format&fit=crop&w=1400&h=350&q=75"
				/>
			</div>
			<div class="bio wrapper wrapper__readable mt8">
				<p>
					Experienced Software and DevOps Engineer from Pittsburgh. If you like my resume and have a unique opportunity, I'd love to chat about it. Please reach out to me via LinkedIn or use the contact form. 
				</p>
				<div style="text-align:center;">
					<a href="https://drive.protonmail.com/urls/A4QX5VV5ZC#OTNGB0rGHOwi">
						<Button>Download Resume (PDF)</Button>
					</a>
				</div>
			</div>
		</div>
		<Footer />
	</body>
</html>
